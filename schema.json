{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "analyser_name",
    "analyser_description",
    "report_title",
    "report_timestamp"
  ],
  "properties": {
    "analyser_name": {
      "type": "string"
    },
    "analyser_description": {
      "type": "string"
    },
    "analysed_object": {
      "type": "string"
    },
    "report_title": {
      "type": "string"
    },
    "report_timestamp": {
      "type": "string",
      "format": "date-time"

    },
    "report_status": {
      "type": "string",
      "enum": [
        "red",
        "yellow",
        "green"
      ]
    },
    "report_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "item_position",
          "item_id"
        ],
        "additionalProperties": false,
        "properties": {
          "item_position": {
            "type": "string"
          },
          "item_id": {
            "type": "string"
          },
          "item_title": {
            "type": "string"
          },
          "item_description": {
            "type": "string"
          }
        }
      }
    }
  }
}
